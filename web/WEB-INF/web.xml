<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>BaseServlet</servlet-name>
        <servlet-class>Controller.BaseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Signup</servlet-name>
        <servlet-class>Controller.Signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewProject</servlet-name>
        <servlet-class>Controller.ViewProject</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewUser</servlet-name>
        <servlet-class>Controller.ViewUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateUser</servlet-name>
        <servlet-class>Controller.UpdateUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterProjectRole</servlet-name>
        <servlet-class>Controller.RegisterProjectRole</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterUserType</servlet-name>
        <servlet-class>Controller.RegisterUserType</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeactivateProjectRole</servlet-name>
        <servlet-class>Controller.DeactivateProjectRole</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeactivateUserType</servlet-name>
        <servlet-class>Controller.DeactivateUserType</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterProject</servlet-name>
        <servlet-class>Controller.RegisterProject</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BaseServlet</servlet-name>
        <url-pattern>/BaseServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Signup</servlet-name>
        <url-pattern>/Signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewProject</servlet-name>
        <url-pattern>/ViewProject</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewUser</servlet-name>
        <url-pattern>/ViewUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateUser</servlet-name>
        <url-pattern>/UpdateUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterProjectRole</servlet-name>
        <url-pattern>/AddProjectRole</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterUserType</servlet-name>
        <url-pattern>/AddUserType</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeactivateProjectRole</servlet-name>
        <url-pattern>/DeactivateProjectRole</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeactivateUserType</servlet-name>
        <url-pattern>/DeactivateUserType</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterProject</servlet-name>
        <url-pattern>/RegisterProject</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
